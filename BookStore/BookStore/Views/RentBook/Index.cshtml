@{
    ViewData["Title"] = "Thuê sách";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Thuê sách</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content ">
                    @*<h2>
                            Validation Wizard Form
                        </h2>
                        <p>
                            This example show how to use Steps with jQuery Validation plugin.
                        </p>*@

                    <form id="form" action="#" class="wizard-big">
                        <h1>Khách hàng</h1>
                        <fieldset>
                            <h2>Thông tin khách hàng</h2>
                            <p class="font-italic">( Nhập số điện thoại và nhấn Enter để tìm kiếm )</p>
                            <input type="hidden" class="form-control" id="customerId" value="0">
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Số điện thoại *</label>
                                        @*<div class="input-group">
                                                <input type="text" id="customerPhone" name="customerPhone" class="form-control required">
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-primary" id="view-list-customer">
                                                        <i class="fa fa-list" aria-hidden="true"></i>
                                                    </button>
                                                </span>
                                            </div>*@
                                        <input id="customerPhone" name="customerPhone" type="number" class="form-control required" placeholder="Số điện thoại">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Họ tên</label>
                                        <input id="customerName" name="customerName" type="text" class="form-control required" placeholder="Họ tên">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="address">Địa chỉ</label>
                                        <input id="address" name="address" type="text" class="form-control required" placeholder="Địa chỉ">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group" id="date-time-picker">
                                        <label>Ngày sinh</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="birth" type="text" class="form-control required" value="01/01/2001">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Giới tính</label>
                                        <div class="i-checks">
                                            <label> <input type="radio" value="true" name="gender" checked> <span class='btn'>Nam</span> </label>&nbsp;&nbsp;
                                            <label> <input type="radio" value="false" name="gender" /> <span class='btn'>Nữ</span>  </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                        <h1>Thuê sách</h1>
                        <fieldset>
                            <h2>Danh sách sách thuê</h2>
                            <br />
                            <div class="book-area">
                                <div class="row book-row" id="row-book">
                                    <div class="col-md-4">
                                        <label>Tên sách</label>
                                        <select class="form-control bookName">
                                            <option></option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label>Giá thuê</label>
                                        <input name="rentPrice" type="number" class="form-control rentPrice" placeholder="Giá thuê">
                                    </div>
                                    <div class="col-md-3">
                                        <label>Trạng thái</label>
                                        <select class="form-control stateId">
                                            <option></option>
                                        </select>
                                    </div>

                                    <div class="col-md-1">
                                        <p class="btn btn-warning  btn-delete-row"><i class="fa fa-times" aria-hidden="true"></i></p>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <p class="btn btn-primary btn-add-row"><i class="fa fa-plus" aria-hidden="true"></i> Thêm sách</p>
                                </div>
                            </div>
                        </fieldset>

                        <h1>Hoàn tất</h1>
                        <fieldset>
                            <h2>Hoàn tất thuê sách</h2>
                            <br />
                            <div class="col-lg-4 col-md-6 col-sm-12 b-r">
                                <dl class="dl-horizontal">
                                    <dt>Ngày</dt>
                                    <dd><span class="label label-info" id="rentDate">null</span></dd>
                                    <dt>Nhân viên</dt>
                                    <dd><span class="label label-info" id="employee-name">null</span></dd>
                                    <dt>Khách hàng</dt>
                                    <dd><span class="label label-info" id="customer-name">null</span></dd>
                                    <dt>Số điện thoại</dt>
                                    <dd><span class="label label-info" id="customer-phone">null</span></dd>
                                    <dt>Tổng số sách thuê</dt>
                                    <dd><span class="label label-info" id="sumBook">1</span></dd>
                                    <dt>Đặt cọc</dt>
                                    @*<dd><span class="label label-info">15000</span></dd>*@
                                    <dd><input id="deposit" name="deposit" type="number" class="input-sm form-control" placeholder="Nhập tiền đặt cọc"></dd>
                                </dl>
                            </div>
                            <div class="col-lg-8 col-md-6 col-sm-0">
                                <p class="text-center">
                                    <a href=""><i class="fa fa-id-card-o big-icon"></i></a>
                                </p>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="~/javascript/rentbook.js"></script>
}