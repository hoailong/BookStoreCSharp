@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký</title>
    <link href="~/lib/css/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/lib/css/toastr/toastr.min.css" rel="stylesheet">
    <link href="~/lib/css/iCheck/custom.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body class="white-bg">
    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">PVH</h1>

            </div>
            <h3>QUẢN LÝ BÁN SÁCH</h3>
            <p>
                Sản phẩm bài tập lớn môn lập trình trực quan
            </p>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Name" required="">
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required="">
            </div>
            <div class="form-group">
                <div class="checkbox i-checks"><label> <input type="checkbox" checked><i></i> Tôi đồng ý với điều khoản công ty </label></div>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b"><i class="fa fa-sign-in" aria-hidden="true"></i> Đăng ký</button>

            <p class="text-muted text-center"><small>Bạn đã có tài khoản?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="login">Đăng nhập</a>
            <p class="m-t"> <small><strong>Coppyright</strong> HoaiPV &copy; 2019 </small> </p>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="~/lib/js/jquery/jquery-3.1.1.min.js"></script>
    <script src="~/lib/js/bootstrap/bootstrap.js"></script>
    <script src="~/lib/js/toastr/toastr.min.js"></script>
    <script src="~/lib/js/iCheck/icheck.min.js"></script>
    <script src="~/javascript/Admin.js"></script>
</body>
</html>
