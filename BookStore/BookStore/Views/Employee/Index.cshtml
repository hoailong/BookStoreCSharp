@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Nhân viên";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Thể loại</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-3 m-b-xs">
                            <button type="button" class="btn btn-danger" id="btn-delete-mul"><i class="fa fa-ban" aria-hidden="true"></i> Xóa</button>
                            <button type="button" class="btn btn-primary" id="btn-create"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới</button>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <select class="form-control" id="genderSearch">
                                    <option value="">Tất cả</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-secondary" id="btn-search-gender"><i class="fa fa-search" aria-hidden="true"></i> Chọn giới tính</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <select class="form-control" id="shiftSearch">
                                    <option value="">Tất cả</option>
                                </select>
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-secondary" id="btn-search-shift"><i class="fa fa-search" aria-hidden="true"></i> Chọn ca làm</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" placeholder="Nhập tên nhân viên..." id="txtSearch" class="form-control">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-secondary" id="btn-search"><i class="fa fa-search" aria-hidden="true"></i> Tìm kiếm</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <table class="table table-hover table-striped table-bordered" id="employee-table">
                        <thead>
                            <tr>
                                <th width="5%" style="text-align: center">
                                    <input type="checkbox" class="i-checks" id="check-all">
                                </th>
                                <th width="5%">#</th>
                                <th width="10%">Tên nhân viên</th>
                                <th width="10%">Số điện thoại</th>
                                <th width="10%">Ngày sinh</th>
                                <th width="5%">Giới tính</th>
                                <th width="15%">Địa chỉ</th>
                                <th width="10%">Trạng thái</th>
                                <th width="10%">Ca làm</th>
                                <th width="10%">Lương</th>
                                <th width="10%" style="text-align: center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="employee-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Khách hàng</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-control" id="employeeId">
                <div class="form-group">
                    <label for="fullname">Tên nhân viên:</label>
                    <input type="text" class="form-control" id="fullname">
                </div>
                <div class="form-group">
                    <label for="phone">Số điện thoại:</label>
                    <input type="number" class="form-control" id="phone">
                </div>
                <div class="form-group" id="date-time">
                    <label>Ngày sinh</label>
                    <div class="input-group date">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input id="birth" type="text" class="form-control" value="01/01/1990">
                    </div>
                </div>
                <div class="form-group">
                    <label>Giới tính</label>
                    <div class="i-checks">
                        <label> <input type="radio" value="true" name="gender" checked> <span class='btn'>Nam</span> </label>&nbsp;&nbsp;
                        <label> <input type="radio" value="false" name="gender" /> <span class='btn'>Nữ</span>  </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address">Địa chỉ:</label>
                    <input type="text" class="form-control" id="address">
                </div>
                <div class="form-group">
                    <label for="salary">Lương:</label>
                    <input type="number" class="form-control" id="salary">
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="status">Trạng thái:</label>
                            <select class="form-control" id="status">
                                <option value="true">Đang làm</option>
                                <option value="false">Nghỉ việc</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="shiftId">Ca làm:</label>
                            <select class="form-control" id="shiftId">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-save" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>

    </div>
</div>


<div id="confirm-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Xóa nhân viên</h4>
            </div>
            <input type="hidden" class="form-control" id="employeeIdDel">
            <div class="modal-body">
                Bạn có chắc muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn-delete">Xóa</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script src="~/javascript/employee.js"></script>
}
